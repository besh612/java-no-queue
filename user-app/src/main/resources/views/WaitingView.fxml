  style="-fx-background-color: #F2F2F2;" xmlns="http://javafx.com/javafx/8.0.161"
  xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controller.WaitingController">
  <children>
    <VBox prefHeight="600.0" prefWidth="300.0">
      <children>
        <AnchorPane prefHeight="50.0" prefWidth="300.0" style="-fx-background-color: #346CF0;">
          <children>
            <Button fx:id="btnBack" layoutX="8.0" layoutY="12.0" mnemonicParsing="false"
              style="-fx-background-color: #00000000;" text="뒤로" textFill="WHITE"/>
          </children>
        </AnchorPane>
        <VBox prefHeight="550.0" prefWidth="300.0" style="-fx-background-color: #346CF0;">
          <children>
            <AnchorPane prefHeight="550.0" prefWidth="300.0">
              <children>
                <Label fx:id="lbTime" alignment="CENTER" layoutX="10.0" layoutY="90.0"
                  prefHeight="19.0" prefWidth="280.0" text="주문시간: 2019.11.11.11"
                  textAlignment="CENTER" textFill="WHITE">
                  <font>
                    <Font size="15.0"/>
                  </font>
                </Label>
                <Label fx:id="lbFoodName" alignment="CENTER" layoutX="20.0" layoutY="171.0"
                  prefHeight="29.0" prefWidth="260.0" text="음식이름" textAlignment="CENTER"
                  textFill="WHITE">
                  <font>
                    <Font size="24.0"/>
                  </font>
                </Label>
                <Label fx:id="lbOrderNum" layoutX="65.0" layoutY="200.0" text="0000"
                  textAlignment="CENTER" textFill="WHITE">
                  <font>
                    <Font size="70.0"/>
                  </font>
                </Label>
                <Button fx:id="btnGetFood" layoutX="10.0" layoutY="486.0" mnemonicParsing="false"
                  prefHeight="50.0" prefWidth="280.0" style="-fx-background-color: #ffffff;"
                  text="버튼을 눌러 수령완료" textFill="#346cf0">
                  <font>
                    <Font size="18.0"/>
                  </font>
                </Button>
                <Label fx:id="lbState" alignment="CENTER" layoutX="10.0" layoutY="329.0"
                  prefHeight="19.0" prefWidth="280.0" text="음식이 조리중입니다." textAlignment="CENTER"
                  textFill="WHITE">
                  <font>
                    <Font size="15.0"/>
                  </font>
                </Label>
              </children>
            </AnchorPane>
          </children>
        </VBox>
      </children>
    </VBox>
  </children>
</AnchorPane>
